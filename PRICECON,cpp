#include<iostream>
using namespace std;
int main()
{
    int t;cin>>t;
    while(t--)
    {
        int n,k;cin>>n>>k;
        int num , sum=0 , diff;
        for(int i=0;i<n;i++)
        {
            cin>>num;
            if(num > k)
            {
                diff = num - k;
                sum += diff;
            }
        }
        cout<<sum<<endl;
    }
}